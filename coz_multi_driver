from cozCube import coz
import cozmo
from cozmo import * 
import asyncio


#this tests 2 cozmos at once, making sure that they can run concurrently
async def multiTest(cozmo1, cozmo2):

    print ("Please input cube ID to assign the first cozmo to: ")
    c1 = coz(cozmo1.wait_for_robot(), input())
    print ("Please input cube ID to assign the first cozmo to: ")
    c2 = coz(cozmo2.wait_for_robot(), input())
    print ("Please input cube ID for 1st Cozmo to find: ")
    id1 = input()
    print ("Please input cube ID FOR 2nd Cozmo to find: ")
    id2 = input()
    asyncio.gather(c1.findCube(id1), c2.findCube(id2))

loop = asyncio.get_event_loop()
multiTest(cozmo.connect_on_loop(loop), cozmo.connect_on_loop(loop))






